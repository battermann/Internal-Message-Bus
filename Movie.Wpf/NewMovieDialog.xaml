<Window x:Class="Movies.Wpf.NewMovieDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Movie" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered">
    <StackPanel Margin="10">
        <Label>Title:</Label>
        <TextBox Name="TxtTitle" MinWidth="250"/>
        <Label>Year:</Label>
        <TextBox Name="TxtYear" MinWidth="250"/>
        <Label>Genre:</Label>
        <TextBox Name="TxtGenre" MinWidth="250"/>
        <Label>Price:</Label>
        <TextBox Name="TxtPrice" MinWidth="250"/>

        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>